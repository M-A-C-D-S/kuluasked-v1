<%- include('../partials/header.ejs') %>
<%- include('../partials/navbar.ejs') %>
    <body>
        <div class="container">
            <br>
            <h2>Usuários</h2>
            <br>
            <a href="/admin/users/create" class="btn btn-success">Criar novo usuário</a>
            <br><br>
            <hr>
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user=> { %>
                    <tr>
                        <td><%= user.id %></td>
                        <td><%= user.username %></td>
                        <td><%= user.email %></td>
                        
                    </tr>
                    <% }) %>
                </tbody>
            </table>
    
        </div>
    </body>
    

<%- include('../partials/footer.ejs') %>