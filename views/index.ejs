<%- include('partials/header.ejs') %>
<body>
    <%- include('partials/navbar.ejs') %>
    <div class="container" id="perguntas">
        <h1>Perguntas</h1>
        <hr>
        <a href="/perguntar" class="btn btn-success">Perguntar</a>
        <hr><br>
        <% perguntas.forEach(pergunta => { %>
        <a href="/pergunta/<%= pergunta.id %>">
            <div class="card">
                
                    <div class="card-body">
                        <h3>#<%= pergunta.id %>  <%= pergunta.titulo %></h3>
                    </div>
            </div>
            <div id="usuario"><p id="usuario"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
                <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
              </svg><%= pergunta.userId %></p></div>
        </a>
        <br>
        <% }) %>
    </div>

</body>
<%- include('partials/footer.ejs') %>